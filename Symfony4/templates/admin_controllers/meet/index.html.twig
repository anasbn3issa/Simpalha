{% extends 'baseAdmin.html.twig' %}
{% block title %}Meet index{% endblock %}


{% block body %}
    <div class="container-fluid" style="margin-top: 10%;">
        <div class="row justify-content-center">
            <div class=" col ">
                <div class="card">
                    <div class="card-header bg-transparent row">
                        <div class="col-6">
                            <h3 class="mb-0">MeetIndex</h3>
                        </div>
                        <div class="col-6" style="text-align: end">
                            <h3 class="mb-0"><a target="_blank" href="{{ path('admin_calendar') }}">Calendar</a></h3>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
    <table id="default_order" class="table align-items-center table-flush">
        <thead class="thead-light">
            <tr>
                <th>Helper</th>
                <th>Specialite</th>
                <th>Feedback</th>
                <th>Date</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for meet in meets %}
            <tr>
                <td>{{ meet.idHelper.pseudo }}</td>
                <td>{{ meet.specialite }}</td>
                <td>{% if meet.feedback is not null %}
                        {{ meet.feedback.description }}</td>
                    {% endif %}
                <td>{{ meet.disponibilite.datedeb|date('d-m-y h:i') }}</td>
                <td>
                    {{ include('admin_controllers/meet/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

        {% endblock %}
{% block scripts %}
{{ parent() }}
    <script src="{{ asset("assets/js/datatable/jquery.dataTables.min.js") }}"></script>
    <script src="{{ asset("assets/js/datatable/datatable-basic.init.js") }}"></script>
{% endblock %}
