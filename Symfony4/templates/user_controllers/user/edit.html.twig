{% extends 'baseUser.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <h1>{{ 'user edit' }}</h1>
                {{ form_start(form) }}

                <div class="form-group">
                    <label class="control-label">Email</label>
                    <p class="form-control-static">{{ app.user.email }}</p>
                    <label class="control-label h2">Roles list</label>
                    {% for role in app.user.roles %}
                        <h4>
                            <span class="badge badge-secondary">
                                {{ role == 'ROLE_ADMIN'?'Administrator':'User' }}
                            </span>
                        </h4>
                    {% endfor %}
                </div>

                {{ form_row(form.password) }}
                {{ form_row(form.email) }}

                <button type="submit" class="btn btn-default btn-primary btn-block" formnovalidate>Save</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
