<!DOCTYPE html>

<title>Comment</title>

{% block body %}
    <h1>Comment</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ comment.id }}</td>
            </tr>
            <tr>
                <th>Timestamp</th>
                <td>{{ comment.timestamp ? comment.timestamp|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Rating</th>
                <td>{{ comment.rating }}</td>
            </tr>
            <tr>
                <th>Upvotes</th>
                <td>{{ comment.upvotes }}</td>
            </tr>
            <tr>
                <th>Downvotes</th>
                <td>{{ comment.downvotes }}</td>
            </tr>
            <tr>
                <th>Solution</th>
                <td>{{ comment.solution }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('user_controllers_comment_index') }}">back to list</a>

    <a href="{{ path('user_controllers_comment_edit', {'id': comment.id}) }}">edit</a>

    {{ include('user_controllers_comment/_delete_form.html.twig') }}
{% endblock %}
