{% extends 'baseUser.html.twig' %}
{% block title %}Helpers List{% endblock %}

{% block body %}
<div class="container">
    <div class="row mb-4 mr-1 pb-4">
        <div class="col-12 mb-3">
            <h1>Helpers</h1>
        </div>
    </div>
    <table class="table table-striped table-bordered display no-wrap borderless text-center"
           style="width:100%; border:unset!important; background-color:#F5F4FB!important; border-radius:11px !important;">        <thead>
            <tr>
                <th>Username</th>
                <th>Specialite</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.username }}</td>
                <td>{{ user.specialite }}</td>
                <td>
                    <a href="{{ path('meet_new', {'id': user.id}) }}">show</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
